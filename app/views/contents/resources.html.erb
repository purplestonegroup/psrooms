	<div class="row resourses_top">
		<div class="eight columns slide">
			<%= image_tag "younghappy.jpg", width: '620' %>
		</div>

		<%= render :partial => 'shared/aweberform' %>
		
	</div>

	<div class="row">

		<div class="eight columns offset-by-two">

			<h2 id="internship"><i class="fa fa-puzzle-piece"></i> <%= t('.internships') %></h2>
			<hr class="light">
			<p><%= t('.internshipstext') %></p>
			<ul class="disc">
				<li><%= t('.internshipsli1') %></li>
				<li><%= t('.internshipsli2') %></li>
				<li><%= t('.internshipsli3') %></li>
				<li><%= t('.internshipsli4') %></li>
