<div class="post_menu">

<!-- When submit the form, the view rendered will be the index view of our articles resource -->
  <%= form_tag(posts_search_path, :method => "get", class: "search_form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "search_input", placeholder: "Search Posts..." %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="button" type="submit"><i class="fa fa-search"></i> </button>
    </div>
  <% end %>

</div>